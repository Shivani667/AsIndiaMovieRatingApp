
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        th{
            font-size:x-large;
            font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            font-weight:600;
        }
        table{
            width:100%;
        }
        td{
            text-align:center;
            font-size:larger;
            font-weight:600;
            font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        }
    </style>
</head>
<body>
   <h1>Movie List</h1>
    <table border="1" >
        <tr>
            <th>Id</th>
            <th>MovieName</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Option</th>
        </tr>
        @foreach(var movie in ViewBag.movies)
        {
    <tr>
        <td>@movie.Id</td>
        <td>@movie.MovieName</td>
        <td><img src="~/Content/Images/@movie.Photo" width="170" height="180" /></td>
        <td>@movie.Price</td>
        <td><a href="@Url.Action("Detail","Movie" , new { id=movie.Id})">Detail</a></td>
    </tr>
        }
    </table>
</body>
</html>
